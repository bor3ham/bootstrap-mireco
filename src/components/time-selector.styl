.MIRECO-time-selector
  height: 15rem
  display: flex
  flex-direction: row
  font-size: 0.875rem

  ul
    flex: 1
    list-style: none
    padding: 0 2px
    margin: 0
    width: 5rem
    overflow-y: auto

    li
      padding: 0
      margin: 0
      button
        position: relative
        margin: 0
        padding: 0.5rem 1rem
        margin: 0
        display: block
        width: 100%
        text-align: left
        outline: none
        border: none
        line-height: 1.2em
        white-space: nowrap
        &:not(:disabled):not(.disabled)
          cursor: pointer
      
      button
        background: content-colour
        color: content-text-colour
        &:hover
          background: content-hover-colour
      &.current
        button
          background: current-colour
          color: current-text-colour
          &:hover
            background: current-hover-colour
      &:not(.current).selected
        button
          background: contained-colour
          color: contained-text-colour
          &:hover
            background: contained-hover-colour

      &.invalid
        opacity: 0.1
      
      &.highlight
        button:after
          content: ' '
          position: absolute
          top: 0
          left: 0
          right: 0
          bottom: 0
          border-left: 1px dashed current-colour
          border-right: 1px dashed current-colour
        &.first-highlight button:after
          border-top: 1px dashed current-colour
          border-top-left-radius: 4px
          border-top-right-radius: 4px
        &.last-highlight button:after
          border-bottom: 1px dashed current-colour
          border-bottom-left-radius: 4px
          border-bottom-right-radius: 4px
      &.selected
        &.first-selected button
          border-top-left-radius: 4px
          border-top-right-radius: 4px
        &.last-selected button
          border-bottom-left-radius: 4px
          border-bottom-right-radius: 4px
      
      &:not(.selected)
        button:hover
          border-radius: 4px
