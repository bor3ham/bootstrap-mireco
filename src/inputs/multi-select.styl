.MIRECO-multi-select
  > ul.selected
    > li
      margin: 0
      margin-bottom: 0.375rem
      &.option
        position: relative
        box-sizing: border-box
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
        max-width: 60%
        border-radius: 2px
        padding-left: 0.25rem
        line-height: 1.5em
        padding-right: 24px

        background: contained-colour
        color: contained-text-colour

        > .MIRECO-clear-button
          position: absolute
          right: 0
          top: 50%
          transform: translateY(-50%) scale(0.75, 0.75)
          padding: 0
          vertical-align: middle

          svg path
            transition: stroke 0.15s ease-in-out, fill 0.15s ease-in-out
          &:not(:hover)
            svg path
              stroke: blend(rgba(#333, 0.5), contained-colour) !important

  &.disabled
    > ul.selected > li.option
      background: darken(disabled-colour, 10%)
