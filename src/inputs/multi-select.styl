.MIRECO-multi-select
  padding: 0.375rem 0.75rem
  padding-bottom: 0
  font-size: 1rem
  font-weight: 400
  line-height: 1.5
  color: #495057
  background-color: #fff
  background-clip: padding-box
  border: 1px solid #ced4da
  border-radius: 0.25rem
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out

  > input
  
  &.in-focus
    color: #495057
    background-color: #fff
    border-color: #80bdff
    outline: 0
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25)
  
  &.disabled
    background: #e9ecef

  > ul.selected
    > li
      margin: 0
      margin-bottom: 0.375rem
      &.text .MIRECO-text
        outline: none
        &::placeholder
          color: #6c757d
          opacity: 1
      &.option
        position: relative
        box-sizing: border-box
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
        max-width: 60%
        border: thin-line solid #ccc
        background: #ddd
        border-radius: 2px
        padding-left: 0.25rem
        line-height: 1.5em
        padding-right: 24px
        color: #333

        > .MIRECO-clear-button
          position: absolute
          right: 0
          top: 50%
          transform: translateY(-50%) scale(0.75, 0.75)
          padding: 0
          vertical-align: middle
