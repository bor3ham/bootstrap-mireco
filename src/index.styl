.MIRECO-dropdown
  max-height: 300px
  overflow-y: auto
  padding-bottom: 4px
  padding-top: 4px
  box-sizing: border-box
  -webkit-overflow-scrolling: touch
  box-shadow: 0 0 0 1px hsla(0,0%,0%,0.1),0 4px 11px hsla(0,0%,0%,0.1)
  border-radius: 4px
  margin: 0
  margin-top: 8px

  padding: 4px 0

  > li
    margin: 0
    padding: 0

    button, &.none
      font-size: 0.875rem
      background: none
      border: none
      padding: 8px 12px
      display: block
      width: 100%
      user-select: none
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
      box-sizing: border-box
      cursor: default
      text-align: left

    &.current button
      background: #007bff
      color: #fff
    &:not(.current) button:hover
      background: #deebff

.MIRECO-calendar
  box-shadow: 0 0 0 1px hsla(0,0%,0%,0.1),0 4px 11px hsla(0,0%,0%,0.1)
  border-radius: 4px
  margin-top: 8px
  width: 18rem
  height: 18rem
  font-size: 0.875rem

  > .calendar-header
    margin: 0.5rem 0
    h5
      margin: 0
      margin-left: 1rem
      font-size: 0.875rem
      font-weight: normal
    button
      background: none
      outline: none
      border: none
      margin: 0
      cursor: pointer

  >table
    tbody
      tr
        td, th
          text-align: center
          font-weight: normal
        td
          button
            background: none
            border: none
            border-radius: 4px
            &:focus
              outline: none
              border: none
          &.current button
            background: #007bff
            color: #fff
          &:not(.current)
            button:not(:disabled)
              cursor: pointer
              &:hover
                background-color: #deebff
          &.outside-month
            button
              opacity: 0.5

.MIRECO-clear-button
  padding: 0 0.1rem
  line-height: 1rem
  background: none !important
  border: none !important
  > svg
    vertical-align: top
    height: 1rem

.MIRECO-spinner
  path
    // stroke: #17a2b8 !important
    stroke: rgb(0, 123, 255) !important

.MIRECO-select
  > div
    > input
      padding-right: calc(0.75rem + 24px)
    > .MIRECO-button.MIRECO-clear-button
      right: calc(0.6rem + 24px)
    > svg
      right: 0.375rem
    &:after
      content: ' '
      position: absolute
      top: 50%
      right: calc(0.6rem + 24px)
      height: 24px
      margin-top: -12px
      border-right: 1px solid #ced4da

  &.clearable
    > div > input
      padding-right: calc(0.75rem + 0.2rem + 48px)
