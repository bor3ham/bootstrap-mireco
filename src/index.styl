@import '../node_modules/mireco/dist/layout.css'

content-colour = #fff
content-hover-colour = #eee
content-text-colour = #000
current-colour = #007bff
current-hover-colour = #0b5ed7
current-text-colour = #fff
contained-colour = #cce5ff
contained-hover-colour = hsl(216, 90%, 84%)
contained-text-colour = #333
disabled-colour = #e9ecef
disabled-text-colour = #495057
disabled-placeholder-colour = #6c757d

@import 'components/advanced-popover'
@import 'components/clear-button'
@import 'components/controls-popover'
@import 'components/day-calendar'
@import 'components/dropdown'
@import 'components/month-calendar'
@import 'components/time-range-popover'
@import 'components/time-selector'
@import 'components/widget-block'

@import 'inputs/multi-select'
@import 'inputs/date-range'
@import 'inputs/datetime-range'

.MIRECO-spinner
  path
    // stroke: #17a2b8 !important
    stroke: rgb(0, 123, 255) !important

.MIRECO-widget-text
  > .MIRECO-clear-button
    right: 0

.MIRECO-widget-block, .MIRECO-multi-select .MIRECO-text
  &.has-icon
    > .MIRECO-clear-button
      right: calc(0.6rem + 24px)
    > svg
      right: 0.375rem
    &:after
      content: ' '
      position: absolute
      top: 6px
      right: calc(0.6rem + 24px)
      height: calc(100% - 12px)
      border-right: 1px solid #ced4da

.MIRECO-widget-block.form-control
  padding: 0
  min-height: calc(2.25rem + 2px)
  height: auto
  &:not(.block)
    width: auto
  &:not(.disabled)
    cursor: text
    &.in-focus
      border-color: #80bdff
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25)
  &.disabled
    background-color: disabled-colour
    color: disabled-text-colour
    opacity: 1
    // wish this was not necessary
    &:focus
      border: 1px solid #ced4da
      box-shadow: none
    input::placeholder
      color: disabled-placeholder-colour
      opacity: 1

input.MIRECO-blockable.form-control:not(.block)
  display: inline-block

.MIRECO-text.MIRECO-embedded
  border: none
  background: none
  padding: 0.375rem 0.75rem
  &:focus-visible
    outline: none

.MIRECO-datetime-controls, .MIRECO-datetime-range-controls
  .MIRECO-time-selector
    height: 18rem

.MIRECO-day-calendar, .MIRECO-month-calendar
  > .calendar-header
    margin: 0.5rem 0
    h5
      margin: 0
      margin-left: 1rem
      font-size: 0.875rem
      font-weight: normal
      text-align: center
    button
      background: none
      outline: none
      border: none
      margin: 0
      cursor: pointer
      svg path
        stroke: #888 !important
      &:hover svg path
        stroke: #333 !important
