.MIRECO-dropdown
  max-height: 300px
  overflow-y: auto
  padding-bottom: 4px
  padding-top: 4px
  box-sizing: border-box
  -webkit-overflow-scrolling: touch
  box-shadow: 0 0 0 1px hsla(0,0%,0%,0.1),0 4px 11px hsla(0,0%,0%,0.1)
  border-radius: 4px
  transform: translateY(8px)

  margin: 0
  padding: 4px 0

  > li
    margin: 0
    padding: 0

    button
      font-size: 0.875rem
      background: none
      border: none
      padding: 8px 12px
      display: block
      width: 100%
      user-select: none
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
      box-sizing: border-box
      cursor: default
      text-align: left

    &.current button
      background: #007bff
      color: #fff
    &:not(.current) button:hover
      background: #deebff
